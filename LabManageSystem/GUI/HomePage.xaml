<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpreadsheetGUI.HomePage"
             Title="Senior Design/Capstone Lab">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button 
        Text="Spreadsheet Format"
        x:Name="SpreadsheetButton"
        BackgroundColor="Snow"
        TextColor="Black"
        BorderColor="Black"
        HeightRequest="50"
        WidthRequest="200"
        Clicked="GoToSpreadsheet"/>
        </HorizontalStackLayout>
        
        <Label 
            Text="Scan or Type in UID:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry 
            Placeholder="The u in the UID will be 0."
            x:Name="UIDEntry"
            MaxLength="8"
            WidthRequest="200"
            TextChanged="LoginUser"/>
        
    </VerticalStackLayout>
</ContentPage>