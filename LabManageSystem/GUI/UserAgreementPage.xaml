<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpreadsheetGUI.UserAgreementPage"
             Title="UserAgreementPage">
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="CenterAndExpand"
            Padding="25">
            <Label 
                x:Name="UAText"
                Text=""
                LineBreakMode="WordWrap"/>
            <Label/>
            <Label/>
            <Label Text="Please fill out the below Information: "/>
            <Label/>
            <Label/>

            <Label Text="UID: "/>
            <Entry x:Name="IDEntry"
                Placeholder="E.g. u1234567 or 01234567"
                   MaxLength="8"/>
            <Label/>
            <Label Text="Name: "/>
            <Entry x:Name="NameEntry"
               Placeholder="Firstname Lastname"/>
            <Label/>
            <Label 
                x:Name="Field1L"
                IsEnabled="False"
                IsVisible="False"/>
            <Entry 
                x:Name="Field1E"
                IsEnabled="False"
                IsVisible="False"
                MaxLength="23"/>
            <Label/>
            <Label 
                x:Name="Field2L"
                IsEnabled="False"
                IsVisible="False"/>
            <Entry 
                x:Name="Field2E"
                IsEnabled="False"
                IsVisible="False"
                MaxLength="23"/>
            <Label/>
            <Label 
                x:Name="Field3L"
                IsEnabled="False"
                IsVisible="False"/>
            <Entry 
                x:Name="Field3E"
                IsEnabled="False"
                IsVisible="False"
                MaxLength="23"/>
            <Label/>
            <Label 
                x:Name="Field4L"
                IsEnabled="False"
                IsVisible="False"/>
            <Entry 
                x:Name="Field4E"
                IsEnabled="False"
                IsVisible="False"
                MaxLength="23"/>
            <Label/>
            <Label 
                x:Name="Field5L"
                IsEnabled="False"
                IsVisible="False"/>
            <Entry 
                x:Name="Field5E"
                IsEnabled="False"
                IsVisible="False"
                MaxLength="23"/>
            <Label/>
            <HorizontalStackLayout
                HorizontalOptions="CenterAndExpand">
                <Button 
                    x:Name="CancelButton"
                    Text="Cancel"
                    Clicked="CancelSigning"
                    Margin="25"/>

                <Button 
                    x:Name="SubmitButton"
                    Text="Submit"
                    Clicked="SubmitSigning"
                    Margin="25"/>

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>